{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "type": "object",
    "properties": {
        "helm-chart-name": {
            "description": {
                "$ref": "#/messages/deploy.helmChartDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "toolchain-api-key": {
            "description": {
                "$ref": "#/messages/toolchainApikeyDescription"
            },
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "api-key"
            }
        },
        "ci-molecule-scenario": {
            "description": {
                "$ref": "#/messages/ci.moleculeScenario"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "cd-molecule-scenario": {
            "description": {
                "$ref": "#/messages/cd.moleculeScenario"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "artifactory-server-url": {
            "description": {
                "$ref": "#/messages/ci.artifactoryServerURL"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "artifactory-repository": {
            "description": {
                "$ref": "#/messages/ci.artifactoryRepository"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "artifactory-repository-path": {
            "description": {
                "$ref": "#/messages/ci.artifactoryRepositoryPath"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "api-key": {
            "description": {
                "$ref": "#/messages/apikeyDescription"
            },
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "api-key"
            }
        },
        "registry-region": {
            "description": {
                "$ref": "#/messages/ci.registryRegionDescription"
            },
            "type": "string",
            "disabled": false,
            "validator": {
                "v-type": "k8s-region",
                "params": [
                    "api-key"
                ]
            }
        },
        "registry-namespace": {
            "description": {
                "$ref": "#/messages/ci.registryNamespaceDescription"
            },
            "type": "string",
            "pattern": "^[a-z0-9][-_a-z0-9]{2,28}[a-z0-9]$",
            "validator": {
                "v-type": "k8s-registry-namespace",
                "params": [
                    "registry-region"
                ],
                "validate": false
            }
        },
        "deploy-region": {
            "description": {
                "$ref": "#/messages/cd.region"
            },
            "type": "string",
            "disabled": false,
            "validator": {
                "v-type": "k8s-region",
                "params": [
                    "api-key"
                ]
            }
        },
        "deploy-resource-group": {
            "description": {
                "$ref": "#/messages/cd.resourceGroup"
            },
            "type": "string",
            "validator": {
                "v-type": "resource-group",
                "params": [
                    "api-key"
                ]
            }
        },
        "deploy-cluster-name": {
            "description": {
                "$ref": "#/messages/cd.cluster"
            },
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "k8s-cluster-name",
                "params": [
                    "deploy-resource-group",
                    "deploy-region"
                ]
            }
        },
        "deploy-cluster-namespace": {
            "description": {
                "$ref": "#/messages/cd.clusterNamespace"
            },
            "type": "string",
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        }
    },
    "required": [
        "helm-chart-name",
        "toolchain-api-key",
        "artifactory-server-url",
        "artifactory-repository",
        "artifactory-repository-path",
        "api-key",
        "registry-region",
        "registry-namespace",
        "deploy-region",
        "deploy-resource-group",
        "deploy-cluster-name",
        "deploy-cluster-namespace"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/validator/validator-v1.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.helmChartName"
            },
            "key": "helm-chart-name"
        },
        {
            "type": "table",
            "columnCount": 5,
            "widths": [
                "40%",
                "2%",
                "28%",
                "2%",
                "28%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/ci.artifactoryServerURL"
                    }
                },
                {
                    "type": "label",
