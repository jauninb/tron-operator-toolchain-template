                    }
                },
                {
                    "type": "select",
                    "title": {
                        "$ref": "#/messages/ci.containerRegistryRegion"
                    },
                    "key": "registry-region"
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "select",
                    "readonly": false,
                    "title": {
                        "$ref": "#/messages/ci.containerRegistryNamespace"
                    },
                    "key": "registry-namespace"
                }
            ]
        },
        {
